<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.tryton.client"
          android:versionCode="1"
          android:versionName="1.0">
  <application android:label="@string/app_name"
               android:theme="@style/TrytonTheme"
               android:icon="@drawable/tryton_icon">
  
    <!-- List all activities -->  
    <activity android:name="Start"
              android:label="@string/app_name">
      <intent-filter>
        <!-- Declare Start as a launcher -->
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="Configure" />
    <activity android:name="Preferences" />
    <activity android:name="About" />
    <activity android:name="Menu" />
    <activity android:name="TreeView" />
    <activity android:name="FormView" />
    <activity android:name="ToManyEditor" />
    
  </application>
  <!-- Request permissions -->
  <uses-permission android:name="android.permission.INTERNET" />

</manifest> 
